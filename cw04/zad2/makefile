CC = gcc
FLAGS = -Wall
SOURCE_PROGRAM_NAME = sigaction_flags.c
PROGRAM_NAME = sigaction_flags


all:
	make compile

compile:
	$(CC) $(FLAGS) $(SOURCE_PROGRAM_NAME) -o $(PROGRAM_NAME)

clean:
	rm -r $(PROGRAM_NAME)

clean_all:
	rm -r $(PROGRAM_NAME)
	rm -r $(DESTINATION_FILENAME)
	rm -r pomiar_zad_1.txt
